<div class="container p-4" id="contenedor">
    <div class="row" id="App">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Cambio de Password</h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="/usuarios/newpws">
                        <input type="hidden" name="id" value="{{user.id}}">
                        <div class="form-group">
                            <input type="text" placeholder="{{user.email}}" class="form-control" readonly>
                        </div>
                        <div class="form-group">
                            <input type="password" name="passwordActual" placeholder="Password Actual" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="nuevaPass" placeholder="Nueva Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="repNuevaPass" placeholder="Reingrese la nueva Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" value="Registrar">Cambiar Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>