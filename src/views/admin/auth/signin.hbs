<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>INGRESAR</h3>
                </div>
                <div class="card-body">
                    {{!-- <img src="/img/contacto.png" alt="Logo" class="card-img-top mx-auto m-2 rounded-circle w-50"> --}}
                    <form action="/signin" method="POST">
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        <div class="form-group">
                            <input type="email" id="email" name="email" placeholder="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-sm btn-success btn-block">
                                Ingresar
                            </button>
                        </div>
                        <div class="form-group">
                            <a href="#" id="renewPass">¿Olvido su contraseña?</a>
                        </div>
                        <a class="btn btn-sm btn-success btn-block" href="/auth/google">
                            Google
                        </a>
                        <a class="btn btn-sm btn-success btn-block" href="/auth/facebook">
                            Facebook
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/signin.js"></script>